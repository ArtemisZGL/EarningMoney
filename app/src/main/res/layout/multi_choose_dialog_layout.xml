<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多选题"
            android:textAlignment="center"/>
        <EditText
            android:hint="请输入问题"
            android:id="@+id/dialogQuestionText"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:id="@+id/numText"
            app:layout_constraintTop_toBottomOf="@id/dialogQuestionText"
            app:layout_constraintRight_toLeftOf="@id/numPicker"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可选数目："/>
        <EditText
            android:inputType="numberSigned"
            app:layout_constraintLeft_toRightOf="@id/numText"
            app:layout_constraintTop_toBottomOf="@id/dialogQuestionText"
            android:id="@+id/numPicker"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:text="(超出范围则为不定项选择）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/numPicker"
            app:layout_constraintTop_toBottomOf="@id/dialogQuestionText"/>
        <TextView
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/numText"
            android:id="@+id/rgText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选项："/>
        <RadioGroup
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/rgText"
            android:id="@+id/choosePart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RadioGroup>
        <EditText
            android:layout_marginTop="15dp"
            android:hint="请输入新选项"
            app:layout_constraintTop_toBottomOf="@id/choosePart"
            android:id="@+id/tempChooseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/addChooseBtn"
            app:layout_constraintTop_toBottomOf="@id/tempChooseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="增加选项"
            android:textAlignment="center"/>
        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/removeChooseBtn"
            app:layout_constraintTop_toBottomOf="@id/addChooseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除选项"
            android:textAlignment="center"/>
        <android.support.constraint.ConstraintLayout
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/removeChooseBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1"
            android:id="@+id/buttonPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:text="确认"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_exit"
                app:layout_constraintHorizontal_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:text="取消"
                android:textAlignment="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_yes"
                app:layout_constraintHorizontal_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/tv_exit"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
