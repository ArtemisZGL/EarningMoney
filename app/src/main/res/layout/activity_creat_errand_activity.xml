<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".creat_errand_activity"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textAlignment="center"
                android:hint="输入跑腿任务标题"
                android:id="@+id/titleText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </EditText>

            <ScrollView
                android:layout_marginTop="20dp"
                android:id="@+id/inputContentPart"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintBottom_toTopOf="@id/contactContentPart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/text_boader"
                android:padding="5dp">
                <EditText
                    android:id="@+id/errandContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:hint="输入任务内容"/>
            </ScrollView>

            <ScrollView
                android:id="@+id/contactContentPart"
                app:layout_constraintTop_toBottomOf="@id/inputContentPart"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/text_boader"
                android:padding="5dp">
                <EditText
                    android:id="@+id/errandContactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:hint="输入联系方式"/>
            </ScrollView>

            <TextView
                android:id="@+id/photoText"
                android:text="任务有关图片"
                app:layout_constraintTop_toBottomOf="@id/contactContentPart"
                android:layout_marginVertical="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
            <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/photoText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginVertical="10dp"
                android:background="@drawable/text_boader"
                android:layout_width="match_parent"
                android:layout_height="320dp">
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addImgBtn4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/addImgBtn2"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addImgBtn5"
                    app:layout_constraintLeft_toRightOf="@id/addImgBtn1"
                    app:layout_constraintRight_toLeftOf="@id/addImgBtn3"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addImgBtn6"
                    app:layout_constraintLeft_toRightOf="@id/addImgBtn2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn4"
                    app:layout_constraintTop_toBottomOf="@id/addImgBtn1"
                    app:layout_constraintBottom_toTopOf="@id/addImgBtn7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/addImgBtn5"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn5"
                    app:layout_constraintTop_toBottomOf="@id/addImgBtn2"
                    app:layout_constraintBottom_toTopOf="@id/addImgBtn8"
                    app:layout_constraintLeft_toRightOf="@id/addImgBtn4"
                    app:layout_constraintRight_toLeftOf="@id/addImgBtn6"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn6"
                    app:layout_constraintTop_toBottomOf="@id/addImgBtn3"
                    app:layout_constraintBottom_toTopOf="@id/addImgBtn9"
                    app:layout_constraintLeft_toRightOf="@id/addImgBtn5"
                    app:layout_constraintRight_toRightOf="parent"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn7"
                    app:layout_constraintTop_toBottomOf="@id/addImgBtn4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/addImgBtn8"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn8"
                    app:layout_constraintTop_toBottomOf="@id/addImgBtn5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/addImgBtn7"
                    app:layout_constraintRight_toLeftOf="@id/addImgBtn9"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
                <ImageButton
                    android:onClick="imageBtn_click"
                    android:src="@mipmap/blue_add"
                    android:id="@+id/addImgBtn9"
                    app:layout_constraintTop_toBottomOf="@id/addImgBtn6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/addImgBtn8"
                    app:layout_constraintRight_toRightOf="parent"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <com.example.asus.earingmoney.lib.Fab
        android:src="@mipmap/tick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/OKfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        fab:fab_colorNormal="@color/blue_normal"
        fab:fab_colorPressed="@color/blue_pressed"
        fab:fab_colorRipple="@color/colorAccent"
        android:onClick="okFab_click"/>
</android.support.constraint.ConstraintLayout>