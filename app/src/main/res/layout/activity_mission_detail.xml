<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissionDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/colorPrimary"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/PopWindowBackgroundStyle"
        app:theme="@style/PopWindowStyle"
        android:gravity="center"
        app:titleTextColor="@color/black" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务详情"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="任务标题"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:gravity="center"/>

    <View
        android:id="@+id/line7"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <LinearLayout
        android:id="@+id/detail_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/line7">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:id="@+id/lin8"
            android:background="@color/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39.25dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布人昵称"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <View
                android:id="@+id/line6"
                android:background="@color/divider"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toBottomOf="@+id/detail"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39.25dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/publish_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布时间"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line5"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_list"/>

    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        android:text="任务详情"
        android:gravity="center"/>

    <View
        android:id="@+id/line4"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail"/>

    <LinearLayout
        android:id="@+id/ddl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/line4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="任务截止时间"
            android:gravity="center"/>

        <View
            android:id="@+id/lin9"
            android:background="@color/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/deadline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="XX年XX月XX日 X时X分X秒"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/ddl"/>

    <LinearLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/line1">

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="任务酬劳"
            android:gravity="center"/>

        <View
            android:id="@+id/lin10"
            android:background="@color/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="XX元"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/price"/>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="接受任务"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line3"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button"/>

</android.support.constraint.ConstraintLayout>