<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:id="@+id/titleText"
            android:text="发布任务信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            android:id="@+id/moneyTextPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务金额："/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/titleText"
            android:layout_marginTop="0dp"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toRightOf="@id/moneyTextPre"
            android:id="@+id/moneyText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/moneyText"
            android:id="@+id/taskNumTextPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可接受任务人数："/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/moneyText"
            android:layout_marginTop="0dp"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toRightOf="@id/taskNumTextPre"
            android:id="@+id/taskNumText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/taskNumText"
            android:id="@+id/targetText"
            android:text="目标人群"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_marginVertical="10dp"
            android:id="@+id/targetGroup"
            app:layout_constraintTop_toBottomOf="@id/targetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioGroup>
        <android.support.constraint.ConstraintLayout
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/targetGroup"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/buttonPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:text="下一步"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_exit"
                app:layout_constraintHorizontal_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:text="取消"
                android:textAlignment="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_yes"
                app:layout_constraintHorizontal_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/tv_exit"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
